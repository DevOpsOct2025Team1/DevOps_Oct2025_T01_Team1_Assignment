{
  "name": "file-service",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "projectType": "application",
  "sourceRoot": "apps/file-service",
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv sync",
        "cwd": "apps/file-service"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "python -m compileall file_service",
        "cwd": "apps/file-service"
      }
    },
    "serve": {
      "executor": "nx:run-commands",
      "continuous": true,
      "options": {
        "command": "uv run python -m file_service",
        "cwd": "apps/file-service",
        "envFile": ".env"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "uv run pytest",
        "cwd": "apps/file-service"
      }
    },
    "docker-build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docker build -t file-service:latest -f apps/file-service/Dockerfile ."
      }
    }
  },
  "tags": ["type:service", "lang:python", "grpc"]
}